.search-bar {
  padding: 12px;
  width: 350px;
  font-size: 16px;
  border: 2px solid #64597b;
  border-radius: 5px 0 0 5px;
  color: #333;
  transition: box-shadow 0.3s ease, transform 0.3s ease;
}

.search-bar:focus {
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  transform: scale(1.02); /* Slight zoom on focus */
}

.search-button {
  padding: 14px;
  border: 2px solid #64597b;
  border-radius: 0 5px 5px 0;
  background-color: #a3c1da;
  color: #fff;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.search-button:hover {
  background-color: #50606e;
  transform: translateY(-3px); /* Subtle lift on hover */
}

.search-button i {
  font-size: 18px;
}

/* Tooltip for help message */
.help-popup {
  position: absolute;
  top: -100px; /* Position above the search bar */
  left: 50%;
  transform: translateX(-50%);
  background-color: #fefefa;
  padding: 15px;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  text-align: center;
  z-index: 10;
  width: 250px;
  visibility: visible; /* Show tooltip by default */
  opacity: 1;
  transition: opacity 0.3s ease, visibility 0.3s ease;
  animation: hideTooltip 5s forwards; /* Hide tooltip after 5 seconds */
}

/* Arrow for tooltip */
.help-arrow {
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-top: 10px solid #fefefa;
}

/* Tooltip reappears when hovering over the search container */
.search-container:hover .help-popup {
  opacity: 1;
  visibility: visible;
  animation: none; /* Disable animation on hover */
}

/* Fade-out animation to hide the tooltip after 5 seconds */
@keyframes hideTooltip {
  0% {
    opacity: 1;
    visibility: visible;
  }
  100% {
    opacity: 0;
    visibility: hidden;
  }
}
