/* Animation styles */
@keyframes fadeInScale {
  0% {
    opacity: 0;
    transform: scale(0.5);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

/* Slide animations */
@keyframes slideInFromTop {
  0% {
    opacity: 0;
    transform: translateY(-30px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInFromBottom {
  0% {
    opacity: 0;
    transform: translateY(30px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

/* Apply animation to the logo */
.logo {
  animation: fadeInScale 2s ease-out;
}

/* Header (Navigation) styles */
nav {
  background-color: #a3c1d1;
  padding: 15px 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 25px;
  animation: slideInFromTop 0.5s ease-out;
}

nav img {
  height: 100px;
}

nav ul {
  list-style: none;
  display: flex;
  gap: 20px;
}

nav ul li a {
  text-decoration: none;
  font-weight: bold;
  color: #000;
  opacity: 0.7;
  transition: opacity 0.3s ease, color 0.3s ease;
  animation: fadeIn 1.2s ease-out;
}

nav ul li a:hover {
  opacity: 1;
  color: #007bff; /* Lighter blue on hover */
}

nav ul li .btn {
  padding: 10px 20px;
  background-color: #007bff;
  color: white;
  border-radius: 5px;
  opacity: 0.8;
  transition: opacity 0.3s ease, background-color 0.3s ease, transform 0.3s ease;
}

nav ul li .btn:hover {
  background-color: #0056b3;
  opacity: 1;
  transform: translateY(-5px); /* Slight lift on hover */
}

/* Home Container */
.home-container {
  background-image: url('/assets/paperbg.jpg');
  background-size: cover;
  background-position: center;
  height: 92.5vh;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  text-align: center;
